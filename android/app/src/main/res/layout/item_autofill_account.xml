<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="68dp"
    app:cardBackgroundColor="@color/flupass_card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/flupass_surface_variant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/autofill_avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:textColor="@color/flupass_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_autofill_avatar"
            android:text="F" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/autofill_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/flupass_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/autofill_subtitle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/flupass_text_secondary"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_chevron_right_24"
            android:tint="@color/flupass_text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
